<nav class="navigation bg-white p-5 shadow-md lg:shadow-none sticky top-0 z-10">
    <div class="container h-full flex items-center justify-between flex-wrap">
        <div class="flex items-center mr-6">
            <h1 class="text-blue-500 font-bold text-xl">{{ page.title }}</h1>
        </div>
